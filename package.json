{
  "name": "claude-terminal",
  "version": "0.8.4",
  "description": "Terminal custom pour Claude Code avec gestion des projets, skills et agents",
  "main": "main.js",
  "scripts": {
    "start": "node scripts/build-renderer.js && electron .",
    "start:dev": "node scripts/build-renderer.js && electron . --dev",
    "watch": "node scripts/build-renderer.js --watch",
    "build:renderer": "node scripts/build-renderer.js",
    "build": "node scripts/build-renderer.js && dotenv -e .env -- electron-builder --win --config electron-builder.config.js",
    "publish": "node scripts/build-renderer.js && dotenv -e .env -- electron-builder --win --publish always --config electron-builder.config.js",
    "generate-assets": "node build-assets/generate-installer-images.js",
    "test": "jest",
    "test:watch": "jest --watch"
  },
  "keywords": [
    "claude",
    "terminal",
    "electron"
  ],
  "author": "Yanis",
  "license": "GPL-3.0",
  "homepage": "https://github.com/Sterll/claude-terminal",
  "repository": {
    "type": "git",
    "url": "https://github.com/Sterll/claude-terminal.git"
  },
  "bugs": {
    "url": "https://github.com/Sterll/claude-terminal/issues"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "devDependencies": {
    "dotenv-cli": "^11.0.0",
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "esbuild": "^0.27.2",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "playwright": "^1.58.2",
    "sharp": "^0.33.5"
  },
  "jest": {
    "testEnvironment": "jsdom",
    "setupFiles": [
      "./tests/setup.js"
    ],
    "testMatch": [
      "**/tests/**/*.test.js"
    ]
  },
  "dependencies": {
    "@anthropic-ai/claude-agent-sdk": "^0.2.42",
    "@xterm/addon-fit": "^0.11.0",
    "@xterm/addon-webgl": "^0.19.0",
    "@xterm/xterm": "^6.0.0",
    "electron-updater": "^6.1.7",
    "keytar": "^7.9.0",
    "node-pty": "^1.1.0"
  }
}
